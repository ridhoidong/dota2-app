<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/nsvDetail"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_detail_hero">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_padding_extra_large"
        android:paddingRight="@dimen/margin_padding_large"
        android:paddingBottom="@dimen/margin_padding_large"
        android:paddingLeft="@dimen/margin_padding_large"
        android:background="@color/colorPrimarySoft">

        <ImageView
            android:id="@+id/ivType"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/img_strength"
            android:layout_marginLeft="@dimen/margin_padding_medium"
            android:layout_marginRight="@dimen/margin_padding_medium"
            android:layout_alignBottom="@+id/tvType"
            android:layout_alignTop="@+id/tvType"
            android:contentDescription="@string/cd_icon_type_hero"/>

        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/label_type_hero"
            android:textColor="@color/grey_200"
            android:layout_toEndOf="@+id/ivType"
            android:padding="@dimen/margin_padding_small"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="22sp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/label_hero_name"
            android:textColor="@color/colorWhite"
            android:layout_below="@id/tvType"
            android:layout_marginTop="@dimen/margin_padding_medium"
            android:paddingTop="@dimen/margin_padding_medium"
            android:paddingRight="@dimen/margin_padding_medium"
            android:paddingLeft="@dimen/margin_padding_medium"/>

        <TextView
            android:id="@+id/tvTagline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_italic"
            android:textStyle="italic"
            android:text="@string/label_hero_name"
            android:textColor="@color/grey_600"
            android:layout_below="@id/tvName"
            android:paddingRight="@dimen/margin_padding_medium"
            android:paddingLeft="@dimen/margin_padding_medium"/>

        <LinearLayout
            android:id="@+id/llAttributeStat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tvTagline"
            android:layout_marginTop="@dimen/margin_padding_extra_large"
            android:background="@drawable/shape_rounded_white_grey_800"
            android:padding="@dimen/margin_padding_large"
            android:layout_marginLeft="@dimen/margin_padding_medium"
            android:layout_marginRight="@dimen/margin_padding_medium"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="start">

                <TextView
                    android:id="@+id/tvStrength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_padding_medium"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/label_strength"
                    android:textColor="@color/grey_200"
                    android:drawableStart="@drawable/ic_strength_18dp"
                    android:drawablePadding="@dimen/margin_padding_medium"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tvAgility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_strength"
                    android:textColor="@color/grey_200"
                    android:fontFamily="@font/poppins_medium"
                    android:drawableStart="@drawable/ic_agility_18dp"
                    android:drawablePadding="@dimen/margin_padding_medium"
                    android:layout_marginStart="@dimen/margin_padding_medium"
                    android:layout_marginTop="@dimen/margin_padding_medium"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/tvStrength"/>

                <TextView
                    android:id="@+id/tvIntelligence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_strength"
                    android:textColor="@color/grey_200"
                    android:fontFamily="@font/poppins_medium"
                    android:drawableStart="@drawable/ic_intelligence_18dp"
                    android:drawablePadding="@dimen/margin_padding_medium"
                    android:layout_marginStart="@dimen/margin_padding_medium"
                    android:layout_marginTop="@dimen/margin_padding_medium"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/tvAgility"/>

                <TextView
                    android:id="@+id/tvAttributes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_attributes"
                    android:textColor="@color/grey_500"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_below="@id/tvIntelligence"
                    android:layout_marginTop="20dp"/>

                <View
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:layout_below="@id/tvAttributes"
                    android:background="@color/colorAccent"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvTypeAttack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_attributes"
                android:textColor="@color/grey_200"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/margin_padding_medium"
                android:drawableTint="@color/grey_500"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvDamage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_padding_medium"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/label_strength"
                    android:textColor="@color/grey_200"
                    android:drawableStart="@drawable/ic_damage_18dp"
                    android:drawablePadding="@dimen/margin_padding_medium"
                    android:gravity="center_vertical|end"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_padding_medium"/>

                <TextView
                    android:id="@+id/tvArmor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_strength"
                    android:textColor="@color/grey_200"
                    android:fontFamily="@font/poppins_medium"
                    android:drawableStart="@drawable/ic_armor_18dp"
                    android:drawablePadding="@dimen/margin_padding_medium"
                    android:layout_marginStart="@dimen/margin_padding_medium"
                    android:layout_marginTop="@dimen/margin_padding_medium"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/tvDamage"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_padding_medium"/>

                <TextView
                    android:id="@+id/tvSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_strength"
                    android:textColor="@color/grey_200"
                    android:fontFamily="@font/poppins_medium"
                    android:drawableStart="@drawable/ic_speed_18dp"
                    android:drawablePadding="@dimen/margin_padding_medium"
                    android:layout_marginStart="@dimen/margin_padding_medium"
                    android:layout_marginTop="@dimen/margin_padding_medium"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/tvArmor"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_padding_medium"/>

                <TextView
                    android:id="@+id/tvStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_stats"
                    android:textColor="@color/grey_500"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_below="@id/tvSpeed"
                    android:layout_marginTop="20dp"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"/>

                <View
                    android:layout_width="20dp"
                    android:layout_height="1dp"
                    android:layout_below="@id/tvStats"
                    android:layout_alignParentEnd="true"
                    android:background="@color/colorAccent"/>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvAbilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/label_abilities"
            android:textColor="@color/grey_300"
            android:layout_below="@id/llAttributeStat"
            android:layout_marginTop="@dimen/margin_padding_extra_large"
            android:paddingLeft="@dimen/margin_padding_medium"
            android:paddingRight="@dimen/margin_padding_medium"/>

        <TextView
            android:id="@+id/tvDescriptionAbilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:fontFamily="@font/poppins_italic"
            android:text="@string/label_click_ability_for_detail"
            android:textColor="@color/grey_700"
            android:layout_below="@id/tvAbilities"
            android:paddingLeft="@dimen/margin_padding_medium"
            android:paddingRight="@dimen/margin_padding_medium"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAbilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDescriptionAbilities"
            android:clipToPadding="false"
            android:layout_marginTop="@dimen/margin_padding_large"
            android:paddingLeft="@dimen/margin_padding_medium"
            android:paddingRight="@dimen/margin_padding_medium"/>

        <TextView
            android:id="@+id/tvTitleSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/label_summary"
            android:textColor="@color/grey_300"
            android:layout_below="@id/rvAbilities"
            android:layout_marginTop="@dimen/margin_padding_extra_large"
            android:paddingRight="@dimen/margin_padding_medium"
            android:paddingLeft="@dimen/margin_padding_medium"
            android:paddingBottom="@dimen/margin_padding_medium"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/label_hero_description"
            android:textColor="@color/grey_400"
            android:textSize="13sp"
            android:justificationMode="inter_word"
            android:layout_below="@id/tvTitleSummary"
            android:padding="@dimen/margin_padding_medium"/>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>